<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/bg_color_gray"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/order_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/img_flag_bg"
        android:src="@drawable/img_flag_selected" />

    <ImageView
        android:id="@+id/order_listitem_icon"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/order_flag"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/order_listitem_icon" >

        <TextView
            android:id="@+id/order_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/order_listitem_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_listitem_name"
            android:layout_marginTop="8dip"
            android:textColor="@color/black"
            android:textSize="15dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/order_listitem_icon"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="数量"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/order_goods_subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dip"
            android:background="@drawable/order_goods_subtract" />

        <TextView
            android:id="@+id/order_goods_index"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_goods_subtract"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/order_goods_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_goods_index"
            android:background="@drawable/order_goods_plus" />

        <TextView
            android:id="@+id/order_listitem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/red"
            android:textSize="20dip" />
    </RelativeLayout>

</RelativeLayout>