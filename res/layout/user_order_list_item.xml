<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/bg_color_gray"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="@dimen/user_order_margin_left"
                android:layout_marginRight="@dimen/user_order_margin_left"
        >
    <RelativeLayout
            android:id="@+id/user_order_item_status_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_order_item_status_title"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        <TextView
                android:id="@+id/user_order_item_status"
                android:layout_alignRight="@+id/user_order_item_status_title"
                android:textColor="@color/bg_color_blue"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>
    <view android:layout_width="match_parent" android:layout_height="5dp"
          android:layout_below="@+id/user_order_item_status_layout"
          android:layout_marginTop="5dp"
          android:background="@color/black"
          android:id="@+id/user_order_item_divider"
          />

    <RelativeLayout
            android:id="@+id/user_order_item_money_layout"
            android:layout_below="@+id/user_order_item_divider"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_order_item_money_title"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        <TextView
                android:id="@+id/user_order_item_money"
                android:layout_alignRight="@+id/user_order_item_money_title"
                android:textColor="@color/bg_color_blue"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_order_item_id_layout"
            android:layout_below="@+id/user_order_item_money_layout"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_order_item_id_title"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        <TextView
                android:id="@+id/user_order_item_id"
                android:layout_alignRight="@+id/user_order_item_id_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_order_item_time_layout"
            android:layout_below="@+id/user_order_item_id_layout"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_order_item_time_title"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        <TextView
                android:id="@+id/user_order_item_time"
                android:layout_alignRight="@+id/user_order_item_time_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_order_item_name_layout"
            android:layout_below="@+id/user_order_item_id_layout"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_order_item_name_title"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        <TextView
                android:id="@+id/user_order_item_name"
                android:layout_alignRight="@+id/user_order_item_name_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>
</RelativeLayout>