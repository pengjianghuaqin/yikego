<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/bg_color_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/user_order_margin_left"
                android:layout_marginRight="@dimen/user_order_margin_left"
        >

    <RelativeLayout
            android:id="@+id/user_point_item_time_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:id="@+id/user_point_item_time"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_point_item_type_layout"
            android:layout_below="@+id/user_point_item_time_layout"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_point_item_type_title"
                android:text="@string/point_type"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
        <TextView
                android:id="@+id/user_point_item_type"
                android:layout_toRightOf="@+id/user_point_item_type_title"
                android:textColor="@color/bg_color_blue"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_point_item_desc_layout"
            android:layout_below="@+id/user_point_item_type_layout"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_point_item_desc_title"
                android:text="@string/point_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
        <TextView
                android:id="@+id/user_point_item_desc"
                android:layout_toRightOf="@+id/user_point_item_desc_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/user_point_item_count_layout"
            android:layout_below="@+id/user_point_item_desc_layout"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_point_item_count_title"
                android:text="@string/point_count"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
        <TextView
                android:id="@+id/user_point_item_count"
                android:layout_toRightOf="@+id/user_point_item_count_title"
                android:textColor="@color/bg_color_blue"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
    </RelativeLayout>

