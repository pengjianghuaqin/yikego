<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        layout="@layout/actionbar_cod" />

    <Button
        android:id="@+id/button_online"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_cod"
        android:layout_below="@+id/button_cod"
        android:layout_marginTop="30dp"
        android:background="@drawable/corners_bg"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="@string/text_playment_online"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_cod"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/corners_bg"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="@string/text_playment_cod"
        android:textColor="@color/white" />

</RelativeLayout>