<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@color/bg_color_gray" >

    <ImageView
        android:id="@+id/goods_listitem_thumb"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/goods_listitem_thumb" >

        <TextView
            android:id="@+id/goods_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/goods_listitem_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_listitem_name"
            android:layout_marginTop="7dip"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/goods_listitem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_listitem_detail"
            android:layout_marginTop="7dip"
            android:textColor="@color/red"
            android:textSize="18dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_shopping_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:background="@color/bg_color_gray" >

        <ImageView
            android:id="@+id/btn_shopping_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_shopping_car" />
    </RelativeLayout>

</RelativeLayout>