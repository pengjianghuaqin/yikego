<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/market_detail_actionbar"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/bg_color_blue" >

            <ImageView
                android:id="@+id/market_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/ic_back" />

            <TextView
                android:id="@+id/actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_submit_order"
                android:textColor="@color/white"
                android:textSize="20dip" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_gray_color_e3"
            android:text="收货人信息"
            android:textColor="@color/bg_color_gray" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_gray_color_e3"
            android:text="聂国罗           18312798683" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_gray_color_e3"
            android:text="上海的啊是大十大十大" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_gray_color_e3"
            android:text="支付方式" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_gray_color_e3"
            android:text="货到付款" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="商品清单" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/white"
            android:dividerHeight="1px"
            android:drawSelectorOnTop="false"
            android:fadingEdge="none"
            android:footerDividersEnabled="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/bg_color_blue" >

            <TextView
                android:id="@+id/selected_settlement_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="数量3件"
                android:textColor="@color/white"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/settlement_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:text="小计 ￥ 358.00"
                android:textColor="@color/white"
                android:textSize="14dip" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/edit_text_color" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应支付： ￥320.00"
            android:layout_centerVertical="true"
            android:textColor="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_submit_order"
            android:layout_marginRight="15dip"
            android:text="提交订单"
            android:background="@drawable/ic_btn_confirm"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </RelativeLayout>

</RelativeLayout>