<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        style="@style/title_color_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="付款信息"
        android:textColor="@color/black" />

    <RelativeLayout
        style="@style/input_color_style"
        android:layout_width="match_parent"
        android:layout_height="50dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="商品总计"
            android:textColor="@color/black"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/price_mount"
            android:textColor="@color/black"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/price_mount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/input_color_style"
        android:layout_width="match_parent"
        android:layout_height="50dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="使用购物券"
            android:textColor="@color/black"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/coupon_mount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:textColor="@color/black"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/coupon_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/coupon_mount"
            android:textColor="@color/black"
            android:textSize="12dip" />
    </RelativeLayout>

</LinearLayout>
